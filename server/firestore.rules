rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Allow users to read and write their own meal history
      match /mealHistory/{mealHistoryId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Allow users to read and write their own logged meals
      match /loggedMeals/{loggedMealId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Fallback rule for other collections (temporary, expires Oct 20, 2025)
    match /{document=**} {
      allow read, write: if request.time < timestamp.date(2025, 10, 20);
    }
  }
}
