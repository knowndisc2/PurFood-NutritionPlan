PORT=4000
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
NODE_ENV=development
COOKIE_SECRET=your_cookie_secret_key_change_this_too
DATABASE_URL="file:./dev.db"

# API Keys (replace with your actual keys)
GEMINI_API_KEY=your_gemini_api_key_here

# Firebase Client Configuration (for web app)
REACT_APP_FIREBASE_API_KEY=your_firebase_api_key_here
REACT_APP_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your_project_id
REACT_APP_FIREBASE_STORAGE_BUCKET=your_project.firebasestorage.app
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
REACT_APP_FIREBASE_APP_ID=your_app_id
REACT_APP_FIREBASE_MEASUREMENT_ID=your_measurement_id

# Firebase Admin SDK Configuration (for server)
# Create a service account in Firebase Console and download the JSON
# Then set the path to the JSON file (recommended) or paste the JSON content
FIREBASE_SERVICE_ACCOUNT_PATH=./path/to/your/firebase-service-account.json
# OR (less secure, not recommended for production)
# FIREBASE_SERVICE_ACCOUNT_JSON={"type":"service_account",...}
